<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.paroquiacristooperario.ejc.ui.activities.LoginActivity"
    android:background="@color/icons"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5in"
                android:layout_marginRight="0.8in"
                android:layout_marginLeft="0.8in">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:padding="0.3in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_user_pink"
                        android:maxHeight="0.20in"
                        android:maxWidth="0.20in"
                        android:layout_marginTop="0.05in"
                        android:layout_marginLeft="0.05in"/>
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Usuário"
                        android:textSize="18dp"
                        android:textColorHint="#999999"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="-0.3in"
                        android:paddingLeft="0.35in"
                        android:paddingBottom="0.15in"
                        android:inputType="textEmailAddress"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0.1in">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_password_pink"
                        android:maxHeight="0.20in"
                        android:maxWidth="0.20in"
                        android:layout_marginTop="0.05in"
                        android:layout_marginLeft="0.05in"/>
                    <EditText
                        android:id="@+id/senha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="#999999"
                        android:layout_marginLeft="-0.3in"
                        android:paddingLeft="0.35in"
                        android:paddingBottom="0.15in"
                        android:inputType="textPassword"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.1in"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acessar"
                        android:background="@color/colorAccent"
                        android:textColor="@color/icons"/>

                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/btnCadastrar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Não possui cadastro?"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorAccent"/>

                    <!--<com.facebook.login.widget.LoginButton-->
                        <!--android:id="@+id/login_button"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingTop="15dp"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:paddingBottom="15dp"-->
                        <!--android:layout_marginRight="30dp"-->
                        <!--android:layout_marginLeft="30dp"/>-->
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
